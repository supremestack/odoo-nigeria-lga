<odoo>
    <!-- Enhance partner form for Nigerian addresses -->
    <record id="view_partner_form_l10n_ng" model="ir.ui.view">
        <field name="name">res.partner.form.l10n.ng</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority">25</field>
        <field name="arch" type="xml">
            <!-- Make state required for Nigerian addresses -->
            <xpath expr="//field[@name='state_id']" position="attributes">
                <attribute name="attrs">{'required': [('country_code', '=', 'NG')]}</attribute>
                <attribute name="placeholder">Select State</attribute>
            </xpath>
            
            <!-- Customize city field label for Nigerian addresses -->
            <xpath expr="//field[@name='city_id']" position="attributes">
                <attribute name="string">LGA/City</attribute>
                <attribute name="placeholder">Select Local Government Area</attribute>
                <attribute name="context">{'default_country_id': country_id, 'default_state_id': state_id}</attribute>
            </xpath>
            
            <!-- Add help text for Nigerian addresses -->
            <xpath expr="//field[@name='country_id']" position="after">
                <div class="text-muted" attrs="{'invisible': [('country_code', '!=', 'NG')]}">
                    <i class="fa fa-info-circle"/> For Nigerian addresses, select State first, then LGA
                </div>
            </xpath>
        </field>
    </record>
    
    <!-- Add search filters for Nigerian contacts -->
    <record id="view_partner_search_l10n_ng" model="ir.ui.view">
        <field name="name">res.partner.search.l10n.ng</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="priority">25</field>
        <field name="arch" type="xml">
            <filter name="supplier" position="after">
                <separator/>
                <filter string="Nigerian Contacts" name="nigerian" 
                        domain="[('country_id.code', '=', 'NG')]"
                        help="Contacts with Nigerian addresses"/>
            </filter>
            <group position="inside">
                <filter string="Nigerian State" name="group_ng_state" 
                        domain="[('country_id.code', '=', 'NG')]" 
                        context="{'group_by': 'state_id'}"/>
                <filter string="Nigerian LGA" name="group_ng_lga" 
                        domain="[('country_id.code', '=', 'NG')]" 
                        context="{'group_by': 'city_id'}"/>
            </group>
        </field>
    </record>
</odoo>
