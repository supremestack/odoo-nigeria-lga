<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- LGA Tree View -->
    <record id="view_nigeria_lga_tree" model="ir.ui.view">
        <field name="name">nigeria.lga.tree</field>
        <field name="model">nigeria.lga</field>
        <field name="arch" type="xml">
            <tree string="Local Government Areas" multi_edit="1" sample="1">
                <field name="name"/>
                <field name="code"/>
                <field name="state_id"/>
                <field name="headquarters" optional="show"/>
                <field name="population" optional="hide"/>
                <field name="chairman_name" optional="hide"/>
                <field name="active" widget="boolean_toggle" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- LGA Form View -->
    <record id="view_nigeria_lga_form" model="ir.ui.view">
        <field name="name">nigeria.lga.form</field>
        <field name="model">nigeria.lga</field>
        <field name="arch" type="xml">
            <form string="Local Government Area">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="LGA Name"/>
                        </h1>
                        <h3>
                            <field name="state_id" options="{'no_create': True}"/>
                        </h3>
                    </div>
                    <group>
                        <group string="Basic Information">
                            <field name="code"/>
                            <field name="headquarters"/>
                            <field name="postal_codes"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group string="Statistics">
                            <field name="population"/>
                            <field name="land_area"/>
                        </group>
                    </group>
                    <group>
                        <group string="Officials">
                            <field name="chairman_name"/>
                            <field name="vice_chairman_name"/>
                            <field name="secretary_name"/>
                        </group>
                        <group string="Contact Information">
                            <field name="phone" widget="phone"/>
                            <field name="email" widget="email"/>
                            <field name="website" widget="url"/>
                        </group>
                    </group>
                    <group string="Address">
                        <field name="address" nolabel="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- LGA Search View -->
    <record id="view_nigeria_lga_search" model="ir.ui.view">
        <field name="name">nigeria.lga.search</field>
        <field name="model">nigeria.lga</field>
        <field name="arch" type="xml">
            <search string="Search Local Government Areas">
                <field name="name" string="LGA" filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="state_id"/>
                <field name="headquarters"/>
                <field name="chairman_name"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" domain="[]" context="{'group_by': 'state_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- LGA Action -->
    <record id="action_nigeria_lga" model="ir.actions.act_window">
        <field name="name">Local Government Areas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">nigeria.lga</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_nigeria_lga_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Local Government Area
            </p>
            <p>
                Manage all 774 Local Government Areas across Nigerian states.
            </p>
        </field>
    </record>
</odoo>
